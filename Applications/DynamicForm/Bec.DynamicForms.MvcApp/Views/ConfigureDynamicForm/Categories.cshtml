<table cellpadding="0" cellspacing="0" border="0" class="table" id="tblcategories">     
        @foreach (var item in Model)
        {
            <tr>                
                <td><input id="@("chk_" + item.CategoryId)" type="checkbox"  /><label for="@("chk_" + item.CategoryId)">@item.Title</label> </td>                
            </tr>
        }  
</table>

