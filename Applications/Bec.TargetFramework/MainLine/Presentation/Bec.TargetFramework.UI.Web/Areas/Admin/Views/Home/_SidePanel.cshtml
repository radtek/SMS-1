                          Icon = Ext.Net.Icon.Application,
                          Width = 135,
                          Margins = "2 2 2 2",
                          DirectClickUrl = Url.Action("ExternalRoleTemplateManagement", "ExternalRoleTemplate", new { area = "Admin", containerId = "AdministrationCenterPanel" })
