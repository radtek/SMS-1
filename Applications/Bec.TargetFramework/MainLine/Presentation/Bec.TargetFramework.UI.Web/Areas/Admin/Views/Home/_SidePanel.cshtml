                          ID = "UserManagement",
                          Text = "Users",
                          Icon = Ext.Net.Icon.Application,
                          Width = 135,
                          Margins = "2 2 2 2",
                          DirectClickUrl = Url.Action("UserManagement", "UserManagement", new { area = "Admin", containerId = "AdministrationCenterPanel" })
