@using Bec.TargetFramework.Security

@(Html.X().Panel()
      .ID("AdministrationSidePanel")
      .Layout(LayoutType.Accordion)
      .Collapsible(true)
      .Split(true)
      .Title("Admin Menu")
      .AnimCollapse(false)
      .Region(Region.West)
      .Width(150)
      .Items(items =>
      {
          items.Add(
              Html.X()
                  .Panel()
                  .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Center, Pack = BoxPack.Start })
                  .Defaults(Html.X().Parameter().Name("margins").Value("0 5 0 0").Mode(ParameterMode.Value))
                  .Title("Security")
                  .Items(it =>
                  {
                      it.Add(new Ext.Net.Button()
                      {
                          ID = "OrganisationManagement",
                          Text = "Organisations",
                          Icon = Ext.Net.Icon.Application,
                          Width = 135,
                          Margins = "2 2 2 2",
                          DirectClickUrl = Url.Action("OrganisationManagement", "Organisation", new { area = "Component", containerId = "AdministrationCenterPanel" })
                      });
                      it.Add(new Ext.Net.Button()
                      {
                          ID = "ExternalGroupTemplateManagement",
                          //Visible = ClaimsHelper.UserHasClaim("Security_GroupTemplate", "AdministrationMenu"),
                          Text = "External Groups",
                          Icon = Ext.Net.Icon.Application,
                          Width = 135,
                          Margins = "2 2 2 2",
                          DirectClickUrl = Url.Action("ExternalGroupTemplateManagement", "ExternalGroupTemplate", new { area = "Admin", containerId = "AdministrationCenterPanel" })
                      });
                      it.Add(new Ext.Net.Button()
                      {
                          ID = "External RoleTemplatesManagement",
