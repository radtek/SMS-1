                          Icon = Ext.Net.Icon.Application,
                          Width = 135,
                          Margins = "2 2 2 2",
                          DirectClickUrl = Url.Action("RoleTemplateManagement", "RoleTemplate", new { area = "Admin", containerId = "AdministrationCenterPanel" })
