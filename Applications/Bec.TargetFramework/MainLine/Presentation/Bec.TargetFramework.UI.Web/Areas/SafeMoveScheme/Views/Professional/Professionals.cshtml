@using Ext.Net;
@using Ext.Net.MVC;
@{
    ViewBag.Title = "Safe Move Scheme";
    Layout = "~/Areas/SafeMoveScheme/Views/Professional/_ProfessionalLayout.cshtml";
    var X = Html.X();
}


@section professionalBody
    {
    @(
 X.Container().Anchor("100% -300").Layout(LayoutType.Column).Items(
             X.Container().PaddingSpec("20 10 0 0").ID("ProfessionalMenu").ColumnWidth(.15).LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Left }).Items(i =>
         {
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("Professionals").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_Professionals", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("Lenders").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_Lenders", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("FinancialServices").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_FinancialServices", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("EstateAgents").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_EstateAgents", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("Lawyers").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_Lawyers", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("HouseBuilders").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_HouseBuilders", containerId = "ProfessionalMenuDetails" }));
         }),
                 X.Container().PaddingSpec("10 0 0 10").ID("ProfessionalMenuDetails").ColumnWidth(.85).ItemsFromPartial("_Professionals")
    )
)
}


