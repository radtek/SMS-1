

@using Ext.Net;
@using Ext.Net.MVC;


@(
 Html.X().Container().ID("links").Center().Items(items =>
        {
            items.Add(
                Html.X().Button().Text("Home").Margin(10).Flat(true).Border(false).StyleSpec("background:transparent").OverCls("btnhover")
               .Listeners(l => l.Click.Handler = "window.location = '" + Url.Action("Home", "Public", new { Area = "SafeMoveScheme" }) + "'"));

            items.Add(
                Html.X().Button().Text("KiteMark").Margin(10).Flat(true).Border(false).StyleSpec("background:transparent").OverCls("btnhover")
                .Listeners(l => l.Click.Handler = "window.location = '" + Url.Action("KiteMark", "Public", new { Area = "SafeMoveScheme" }) + "'"));

            items.Add(
                 Html.X().Button().Text("Selling a Property").Flat(true).Border(false).StyleSpec("background:transparent").Margin(10)
                 .Listeners(l => l.Click.Handler = "window.location = '" + Url.Action("SellingProperty", "Public", new { Area = "SafeMoveScheme" }) + "'"));

            items.Add(
                Html.X().Button().Text("Buying a Property").Flat(true).Border(false).StyleSpec("background:transparent").Margin(10)
                .Listeners(l => l.Click.Handler = "window.location = '" + Url.Action("BuyingProperty", "Public", new { Area = "SafeMoveScheme" }) + "'"));
        
            items.Add(
                Html.X().Button().Text("Trusted Professionals").Flat(true).Border(false).StyleSpec("background:transparent").Margin(10)
                .Listeners(l => l.Click.Handler = "window.location = '" + Url.Action("TrustedProfessional", "Public", new { Area = "SafeMoveScheme" }) + "'"));
        }
)
)
