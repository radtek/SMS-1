@using Ext.Net;
@using Ext.Net.MVC;
@{
    ViewBag.Title = "Safe Move Scheme";
    Layout = "~/Areas/SafeMoveScheme/Views/Professional/_ProfessionalLayout.cshtml";
    var X = Html.X();
}


@section professionalBody
    {
    @(
 X.Container().Layout(LayoutType.Column).Items(
                 X.Container().PaddingSpec("20 10 0 0").ID("ProfessionalMenu").ColumnWidth(.15).LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Left }).Items(i =>
         {
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("About").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_About", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("The Board").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_Board", containerId = "ProfessionalMenuDetails" }));
             i.Add(X.Button().Border(false).Flat(true).MarginSpec("10 10 10 10").StyleSpec("background:transparent").Text("Related Services").DirectClickAction("LoadPartial", "Professional", new { area = "SafeMoveScheme", partialName = "_RelatedServices", containerId = "ProfessionalMenuDetails" }));
         }),
                 X.Container().PaddingSpec("10 0 0 10").ID("ProfessionalMenuDetails").ColumnWidth(.85).ItemsFromPartial("_About")
    )
    )
    }

