@using Bec.TargetFramework.Web.Framework.Extensions
@using Ext.Net
@using Ext.Net.MVC


@(          Html.X().Container().Items( 
Html.X().Container().Items(

                                                    Html.X().TreePanel().ID("RootTree").Height(500).Width(240).Border(false).Title("Process")
                                                             .Store(
                                                                    Html.X().TreeStore().ID("TreeStructureStore").AutoLoad(true)
                                                                   .Proxy(p => p.Add(Html.X().AjaxProxy().Url(Url.Action("GetTreeStructure", "Reference", new { area = "" }))))
                                                                    .MessageBusListeners(ml =>
                                                                   {
                                                                       ml.Add(new MessageBusListener { Name = "TreeStructureReload", Handler = "App.TreeStructureStore.load();" });
                                                                   }))
                                                             .UseArrows(false)
                                                             .Lines(false)
                                                             .DisableSelection(true)
                                                             .RootVisible(false)
                                                             .Listeners(l => l.AfterRender.Handler = "App.RootTree.expandAll();")
                                                             .Animate(false)
                                                            ,
                                               Html.X().Panel().Title("Help").Height(120).Width(240)
                                                 .Items
                                                 (
                                                     Html.X().Label().ID("HelpLabel").Height(75).Width(200).Text("hi")
                                                 )
), 
Html.X().Panel().ID("dividingLine")
)
)
