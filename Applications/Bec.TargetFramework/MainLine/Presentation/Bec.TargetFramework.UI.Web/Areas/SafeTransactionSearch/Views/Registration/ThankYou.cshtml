@using Bec.TargetFramework.Web.Framework.Extensions
@using Ext.Net
@using Ext.Net.MVC

@model Bec.TargetFramework.Entities.RegistrationDTO

@{
    var X = Html.X();
    Layout = "~/Views/Shared/_BaseLayoutNoNotificationViewer.cshtml";
}

@section headTag
{
    <style>
        .text-bg {
            position: relative;
        }

            .text-bg p {
                position: absolute;
                background: url("~/Content/resources/images/sms/slider-text-bg.png");
                width: 250px;
                height: 220px;
                color: #fff;
                font-size: 40px;
                padding: 10px;
                top: 0px;
                right: 0px;
            }



        .main-img {
            margin-bottom: 30px;
        }

        .content {
            width: 1000px;
            margin: 0 auto;
        }
    </style>

}

@section mainBody
{

    @( Html.X().Viewport().ID("MainViewPort").OverflowX(Overflow.Auto).OverflowY(Overflow.Auto).Items(
                                X.Container().Region(Region.North).ItemsFromPage(this, "~/Views/Portal/_TopBar.cshtml"),
                                X.Image().Cls("text-bg content").ImageUrl(@Url.Content("~/Content/resources/images/STS/ProfessionalSignUpRegister.jpg")).Padding(10),
                                    X.Panel().ID("Registration").LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Center, Pack = BoxPack.Center }).Layout(LayoutType.VBox).BodyPadding(5).Region(Region.Center).Padding(5).Flex(1)
                                .Items(
                                         X.Label().Text("Thank you for submitting your details an email has been sent to your Compliance Officer."),
                                             X.Panel().Border(true).Width(640).Padding(5).Items(
                                                        X.Panel().ApplyPanelDefaults("RegisterCODetails").Items(

                                                                             X.Label().Padding(5).Text(Model.COTitle + " " + Model.COFirstName + " " + Model.COLastName + " " + Model.COEmail),
                                                                          X.Label().Padding(5).Text(Model.CORegulator + " " + Model.CORegulatorNumber)

                                                             ),
                                                         X.Panel().ApplyPanelDefaults("RegisterMyDetails").Items(
                                                                                            X.Label().Padding(5).Text(Model.Title + " " + Model.FirstName + " " + Model.LastName + " " + Model.Email)
                                                         ),
                                                         X.Panel().ApplyPanelDefaults("RegisterFirmDetails").Items(
                                                                                    X.Label().Padding(5).Text(Model.FirmRegisteredName + " " + Model.FirmRegulator + " " + Model.COOfficeBranchRegulatorNumber),
                                                                                    X.Label().Padding(5).Text(Model.COOfficeAddress.Line1 + " " + Model.COOfficeAddress.Line2 + " " + Model.COOfficeAddress.City + " " + Model.COOfficeAddress.Country + " " + Model.COOfficeAddress.PostalCode)
                                                         )

                                             )

                                           )
                                  )
    )

}
