@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Web.Framework.Extensions
@using Ext.Net
@using Ext.Net.MVC

@{
    var X = Html.X();
    Layout = "~/Views/Shared/_BaseLayoutNoNotificationViewer.cshtml";
}



@section headTag
{

}

@section mainBody
{

    @(Html.X().Viewport().Layout(LayoutType.Border).ID("PaymentSuccessfulViewPort").AutoDoLayout(true)
          .Items(
              X.Panel().Region(Region.North).ItemsFromPage(this, "~/Views/Portal/_TopBar.cshtml"),
              X.Panel().Region(Region.West).ID("WorkflowTree").Height(750).Width(250).AutoScroll(false).ItemsFromPartial("_LeftPanel"),
              X.Panel().ID("PaymentSuccessful").ColumnWidth(1).Items(
                          X.Container().Layout(LayoutType.Column).Padding(2).MinWidth(880)
                                  .Items
                                  (
                                      X.Container().ColumnWidth(1)
                                          .Items(
                                              X.Container().Layout(LayoutType.HBox).LayoutConfig(new HBoxLayoutConfig {Align = HBoxAlign.Middle, Pack = BoxPack.End})
                                                  .Items
                                                  (
                                                      X.Button().ApplyButtonDefaults(Razor.ApplyNextButtonDefaults).Flat(true)
                                                          .DirectEvents(de =>
                                                          {
                                                              de.Click.Url = Url.Action("PaymentSuccessfulNext", "Payment", new {area = "SafeTransactionSearch"});
                                                              de.Click.EventMask.ShowMask = true;
                                                              de.Click.EventMask.Msg = "Please wait ...";
                                                          })
                                                  )
                                          )
                                  )
                          )))
}
