@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Web.Framework.Extensions
@using Ext.Net
@using Ext.Net.MVC
@model Bec.TargetFramework.Entities.ShoppingCartItemDTO

@{
    var X = Html.X();
    Layout = "~/Views/Shared/_BaseLayoutNoNotificationViewer.cshtml";
}



@section headTag
{

}

@section mainBody
{

    @(Html.X().Viewport().Layout(LayoutType.Border).ID("ProductDescViewPort").AutoDoLayout(true)
          .Items(
             
                      X.Panel().ID("ProductDescPanel").ColumnWidth(1).Items(
                                  X.Container().Layout(LayoutType.Column).Region(Region.Center).Padding(2).AutoScroll(true)
                                  .Items
                                  (
                                      X.Container().ColumnWidth(1)
                                          .Items(
                                              X.Container().Layout(LayoutType.Column)
                                                  .Items
                                                  (
                                                      X.TextFieldFor(Model.ProductInformationDto.Description).ReadOnly(true).MinWidth(600).MinHeight(200).ApplyFieldDefaults("ProductDescription","Description").ID("ProductDesc").Name("ProductDesc")
                                                  )
                                          )
                                  )
                          )))
}
