<!DOCTYPE html>
<html lang="en-us" id="@ViewBag.PageId" class="@Settings.CurrentTheme">
<head>
    <title>@ViewBag.Title - Safe Move Scheme - Protecting you from Property Fraud</title>
    <meta name="description" content="@ViewBag.Meta">
    <meta name="keywords" content="Safe Move Scheme, property transactions, manage risk, Prevent property fraud, property fraud, buyers, Reduce risk, lenders, conveyancers, Safe Seller, Safe buyer">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/content/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/content/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/content/img/splash/sptouch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/content/img/splash/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/content/img/splash/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/content/img/splash/touch-icon-ipad-retina.png">

    <!-- Startup image for web apps -->
    <link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-landscape.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
    <link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-portrait.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
    <link rel="apple-touch-startup-image" href="~/content/img/splash/iphone.png" media="screen and (max-device-width: 320px)">

    @Styles.Render("~/content/websitelayout/css/style")

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>

    @Scripts.Render("~/bundles/scripts/websitelayout")

    @RenderSection("Scripts", false)
</head>
<body class="@ViewBag.PageClass @Settings.CurrentTheme @Html.RouteIf("hidden-menu","AcceptTCs", "Index")">

    <div class="container">
        <div class="top navbar square-bottom-right">
            <a href="@Url.Action("Index", "Home", new { Area = "" })">
                <img class="brand-img" src="~/content/websitelayout/images/SMS-logo.png" />
            </a>
        </div>
    </div>
    <div class="container">
        <nav class="navbar navbar-default square-top-right">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand heading-toggle" href="@Url.Action("Index", "Home", new { Area = "" })">Home</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle @Html.Conditional("selected", "action", "ConveyancersAtRisk", "SafeBuyerProduct", "HowTheSmsHelpsLenders", "ConveyancingFirmFaq", "FreeTrial", "HowTheSMSHelpsConveyancingFirms", "ConveyancersCompliance", "LendersCompliance", "ConveyancingFirmRegistration", "Tutorials")" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">For Professionals <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="@Html.Conditional("selected", "action", "ConveyancersAtRisk")">@Html.ActionLink("Conveyancers At Risk", "ConveyancersAtRisk", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "SafeBuyerProduct")">@Html.ActionLink("Safe Buyer Product", "SafeBuyerProduct", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "HowTheSmsHelpsLenders")">@Html.ActionLink("How the SMS Helps Lenders", "HowTheSmsHelpsLenders", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "ConveyancingFirmFaq")">@Html.ActionLink("Frequently Asked Questions", "ConveyancingFirmFaq", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "FreeTrial")">@Html.ActionLink("** Free Safe Buyer Trial **", "FreeTrial", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "HowTheSMSHelpsConveyancingFirms")">@Html.ActionLink("How The SMS Helps Conveyancing Firms", "HowTheSMSHelpsConveyancingFirms", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "ConveyancersCompliance")">@Html.ActionLink("Conveyancer's Compliance", "ConveyancersCompliance", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "LendersCompliance")">@Html.ActionLink("Lender's Compliance", "LendersCompliance", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "ConveyancingFirmRegistration")">@Html.ActionLink("Conveyancing Firm Registration", "ConveyancingFirmRegistration", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "Tutorials")">@Html.ActionLink("Tutorials", "Tutorials", new { Area = "", Controller = "Home" })</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle @Html.Conditional("selected", "action", "ForThePublicIntroduction", "Tutorials", "HowToKeepConsumersSafe", "BuyersAtRisk")" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">For the Public <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="@Html.Conditional("selected", "action", "ForThePublicIntroduction")">@Html.ActionLink("Introduction", "ForThePublicIntroduction", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "Tutorials")">@Html.ActionLink("Tutorials", "Tutorials", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "HowToKeepConsumersSafe")">@Html.ActionLink("How To Keep Consumers Safe", "HowToKeepConsumersSafe", new { Area = "", Controller = "Home" })</li>
                            <li class="@Html.Conditional("selected", "action", "BuyersAtRisk")">@Html.ActionLink("Buyers At Risk", "BuyersAtRisk", new { Area = "", Controller = "Home" })</li>
                        </ul>
                    </li>

                    <li class="@Html.Conditional("selected", "action", "AboutUs")">@Html.ActionLink("About Us", "AboutUs", new { Area = "", Controller = "Home" })</li>
                    <li class="@Html.Conditional("selected", "controller", "Search")"><a href="@Url.Action("Index", "Search", new { Area = "Account" })">Search the Register</a></li>
                    <li class="@Html.Conditional("selected", "controller", "Login") nav-login"><a href="@Url.Action("Index", "Login", new { Area = "Account" })">Login&nbsp;<i class="fa fa-sign-in"></i></a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <div class="header-social">
                <a href="https://www.facebook.com/safemovescheme"><i class="fa fa-facebook"></i></a>
                <a href="https://twitter.com/SafeMoveScheme"><i class="fa fa-twitter"></i></a>
                <a href="https://www.youtube.com/channel/UCSXu9Ktqq9pFq17vPMMI0ow/feed"><i class="fa fa-youtube"></i></a>
                <a href="https://www.linkedin.com/company/the-safe-move-scheme"><i class="fa fa-linkedin"></i></a>
            </div>
            <p>&copy; @DateTime.Now.Year Safe Move Scheme. All Rights Reserved.<br /></p>
            <p><a href="~/Content/websiteLayout/SMS-TsCs.pdf" target="_blank">Terms of Use & Privacy Policy</a>&nbsp;|&nbsp;@Html.ActionLink("Contact Us", "ContactUs", new { Area = "", Controller = "Home" })&nbsp;|&nbsp;<a href="~/Content/websiteLayout/SMS Login Security Policy.pdf" target="_blank">SMS Login Security Policy</a></p>

        </div>
    </footer>

</body>
</html>
