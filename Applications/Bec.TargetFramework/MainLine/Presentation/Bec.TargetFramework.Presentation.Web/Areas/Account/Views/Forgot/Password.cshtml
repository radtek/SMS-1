@model string
@{
    ViewBag.PageId = "extr-page";
}

<div id="content" class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <div class="well no-padding">
                <form action="@Url.Action("Password", "Forgot", new { area = "Account"})" id="forgot-password-form" method="POST" class="smart-form client-form">
                    <header>
                        Password Reset
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">Please enter your registered Username</label>
                            <label class="input">
                                <input type="text" name="username" />
                            </label>
                        </section>
                        <br />
                        <section>
                            @Html.Partial("_Captcha")
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" id="formSubmit" class="btn btn-primary" disabled>
                            Continue
                        </button>
                    </footer>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
            <hr />
            <label>reCAPTCHA may not display correctly if you are running IE in compatbility view</label>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Scripts.Url("~/Scripts/Account/Forgot/Password")"></script>
}