@model string
@{
    ViewBag.PageId = "extr-page";
}

<div id="content" class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <div class="well no-padding">
                <form action="@Url.Action("Password", "Forgot", new { area = "Account"})" id="forgot-password-form" method="POST" class="smart-form client-form">
                    <header>
                        Password Reset
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">Please enter your registered Username</label>
                            <label class="input">
                                <input type="text" name="username" />
                            </label>
                        </section>
                        <br />
                        <section>
                            <div class="g-recaptcha" data-sitekey="6LfblQcTAAAAAOFJDCXm2uQohq7pYC-Y35qRwLxK"></div>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" id="formSubmit" class="btn btn-primary">
                            Submit
                        </button>
                    </footer>
                </form>
            </div>
        </div>
    </div>
</div>

@section pagespecific {
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#forgot-password-form").validate({
                // Rules for form validation
                rules: {
                    username: {
                        required: true
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                },

                submitHandler: function (form) {
                    $('#formSubmit').prop('disabled', true);
                    form.submit();
                }
            });
        });
    </script>
}