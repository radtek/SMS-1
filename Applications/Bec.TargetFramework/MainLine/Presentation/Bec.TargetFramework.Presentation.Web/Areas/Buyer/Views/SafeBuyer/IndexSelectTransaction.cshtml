@using Bec.TargetFramework.Entities
@model IEnumerable<SmsUserAccountOrganisationTransactionDTO>
<div id="content">
    <div class="row">
        <h2 class="row-seperator-header inline-heading">
            <i class="fa fa-home fa-lg margin-right-10"></i>Transactions
        </h2>
        <div class="col-sm-12">
            <div class="well">
                <div class="alert alert-info fade in">
                    <i class="fa fa-info margin-right-5"></i><strong>Information </strong>
                    <p>Please find your transaction on the Safe Move Scheme below.</p>
                </div>
                <ul class="media-list buyer-transaction-list ">
                    @foreach (var tx in Model)
                    {
                        var companyName = tx.SmsTransaction.Organisation.OrganisationDetails.First().Name;
                        string linkText = "";

                        <li class="media">
                            <span class="transaction-icon pull-left">
                                <i class="media-object fa fa-home fa-4x"></i>
                            </span>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <a href="@Url.Action("Index", "SafeBuyer", new { Area = "Buyer", selectedTransactionId = tx.SmsTransactionID })">
                                        @if (!string.IsNullOrEmpty(tx.SmsTransaction.Address.Line1))
                                        {
                                            linkText = "Purchase of Property " + tx.SmsTransaction.Address.Line1 + ", " + tx.SmsTransaction.Address.PostalCode + " added by " + companyName + ".";
                                        }
                                        else
                                        {
                                            linkText = "Purchase of Property TBC added by " + companyName + ".";
                                        }
                                        @linkText
                                    </a>
                                </h4>
                                <p class="text-muted">
                                    <small>Added On: <span class="format-date" data-val="@tx.CreatedOn.ToString("O")"></span></small>
                                </p>
                            </div>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/Buyer/SafeBuyer/IndexSelectTransaction")"></script>
}
