@using Bec.TargetFramework.Entities

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="revokeLoginsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="revokeLoginsLabel">Revoke Invite</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("RevokeInvite", "Users", new { area = "ProOrganisation", uaoId = ViewBag.uaoId, userId = ViewBag.userId })" method="POST" id="revokeLogins-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Are you sure you wish to revoke the invite to @ViewBag.label?</label>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitrevokeLogins" class="btn btn-primary">
                    Revoke Invite
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/ProOrganisation/Shared/_RevokeInvite")"></script>
