<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <h2 class="row-seperator-header">View Registered Users</h2>
        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="well">
                        <div id="regGrid" data-url="@Url.Action("GetUsers", "Users", new { area = "ProOrganisation", temporary = false, loginAllowed = true })"></div>
                    </div>
                </div>
            </div>

            <div class="row hidden" id="rPanel">
                <div class="col-sm-6">
                    <!-- well -->
                    <div class="well">
                        <a id="editButton" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewEditUser", "Users", new { area = "ProOrganisation" })">Edit User</a>
                        <h5>Selected User</h5>
                        <dl class="dl-horizontal">
                            <dt>Name:</dt>
                            <dd><p id="ddName"></p></dd>
                            <dt>Email:</dt>
                            <dd><p id="ddEmail"></p></dd>
                            <dt>Username:</dt>
                            <dd><p id="ddUsername"></p></dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/ProOrganisation/Users/Registered")"></script>
}
