<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        
        <h2 class="row-seperator-header inline-heading">View Invited Users</h2>
        <a data-href="@Url.Action("ViewAddUser", "Users", new { area  = "ProOrganisation" })" class="btn btn-primary btn-sm inline-heading" data-modallink="true">Invite User</a>

        <div class="col-sm-12">

            <ul id="myTab1" class="nav nav-tabs bordered" role="tablist" data-selected="@TempData["tabIndex"]">
                <li><a href="#s1"> New Invites </a></li>
                <li><a href="#s2"> Expired / Revoked Invites </a></li>
            </ul>
            <div id="myTabContent1" class="tab-content padding-10">

                <div class="tab-pane fade in active" id="s1" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="nGrid" data-url="@Url.Action("GetUsers", "Users", new { area = "ProOrganisation", temporary = true, loginAllowed = true })" data-jumpto="@TempData["UserId"]"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="nPanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <a id="revokeButton1" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewRevokeInvite", "Users", new { area = "ProOrganisation" })">Revoke Invite</a>
                                <h5>Selected Invite</h5>
                                <dl class="dl-horizontal">
                                    <dt>Name:</dt>
                                    <dd><p id="ddnName"></p></dd>
                                    <dt>Email:</dt>
                                    <dd><p id="ddnEmail"></p></dd>
                                    <dt>PIN:</dt>
                                    <dd><p id="ddnPIN"></p></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="s2" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="eGrid" data-url="@Url.Action("GetUsers", "Users", new { area = "ProOrganisation", temporary = true, loginAllowed = false })" data-jumpto="@TempData["UserId"]"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="ePanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <a id="reinstateButton" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewReinstate", "Users", new { area = "ProOrganisation" })">Reinstate Invite</a>
                                <h5>Selected Invite</h5>
                                <dl class="dl-horizontal">
                                    <dt>Name:</dt>
                                    <dd><p id="ddeName"></p></dd>
                                    <dt>Email:</dt>
                                    <dd><p id="ddeEmail"></p></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/ProOrganisation/Users/Invited")"></script>
}