@using Bec.TargetFramework.Entities

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="reinstateLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="reinstateLabel">Reinstate Invite</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("Reinstate", "Users", new { area = "ProOrganisation" })" method="POST" id="reinstate-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <input type="hidden" name="userId" value="@ViewBag.userId" />
                                <input type="hidden" name="uaoId" value="@ViewBag.uaoId" />

                                <div class="row">
                                    <section class="col">
                                        <label class="label">Are you sure you wish to reinstate the expired invite for @ViewBag.fullName?</label>
                                    </section>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" id="cancelReinstate" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitReinstate" class="btn btn-primary">
                    Reinstate
                </button>
            </div>
        </div>
    </div>
</div>
<script async src="@Scripts.Url("~/Scripts/ProOrganisation/Shared/_Reinstate")"></script>
