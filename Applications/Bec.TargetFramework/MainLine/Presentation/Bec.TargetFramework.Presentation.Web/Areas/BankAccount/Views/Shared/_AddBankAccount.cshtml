@using Bec.TargetFramework.Entities
@model OrganisationBankAccountDTO

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="addBankAccountLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!--
        <div class="help help-container help-sm">
            <div class="help-vert">HELP</div>
            <div class="help help-inner">
                <div>Help goes here</div>
            </div>
        </div>
            -->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addBankAccountLabel">Add Bank Account</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("AddBankAccount", "Account", new { area = "BankAccount" })" method="POST" id="addBankAccount-form" class="smart-form" data-check="@Url.Action("CheckBankAccount", "Account", new { Area = "BankAccount" })">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <section>
                                    <label class="label">Account Number</label>

                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.BankAccountNumber, new { tabindex = "1", maxlength = 8, onchange = "dupeCheck()", id = "ac" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Sort Code</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.SortCode, new { tabindex = "2", maxlength = 6, onchange = "dupeCheck()", id = "sc" })
                                    </label>
                                </section>
                                <input type="hidden" name="combined" id="combined" />
                            </fieldset>


                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelAddBankAccount" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitAddBankAccount" class="btn btn-primary" tabindex="3">
                    Add Bank Account
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/BankAccount/Shared/_AddBankAccount")"></script>
