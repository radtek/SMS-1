@model List<Bec.TargetFramework.Presentation.Web.Areas.Admin.Controllers.Discussion>

@using Bec.TargetFramework.Entities.Enums
<!-- MAIN CONTENT -->
<div id="content" data-templateurl="@Url.Action("GetTemplate", "App", new { area = "" })" data-welcome="@TempData["WelcomeMessage"]" data-welcomeurl="@Url.Action("Welcome", "Transaction", new { Area = "SmsTransaction" })">
    <div class="row">
        <div class="col-sm-8 col-lg-9">
            <h2 class="row-seperator-header inline-heading"><i class="fa fa-lg fa-home margin-right-10"></i>View Transactions</h2>
        </div>
        <div class="col-sm-4 col-lg-3">
            <div class="input-group margin-top-15 margin-bottom-5">
                <input type="text" class="form-control" id="gridSearchInput">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="gridSearchButton"><i class="fa fa-search margin-right-5"></i>Search</button>
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="well">
                        <div id="txGrid" data-url="@Url.Action("GetSmsTransactions", "Transaction", new { area = "SmsTransaction" })" data-jumpto="@TempData["SmsTransactionID"]" data-jumptopage="@TempData["pageNumber"]"></div>
                    </div>
                </div>
            </div>

            <div class="row hidden" id="rPanel">
                <div class="col-sm-6">
                    <div class="well">
                        <h3>Transaction Details</h3>
                        <div id="transactionDetails"></div>
                    </div>
                    <div class="well">
                        <!-- TEST -->

                        <div class="well view-messages-container">
                            <div class="row">
                                <div id="discussionsContainer" class="col-xs-12 discussions-container">
                                    <h3>Discussions</h3>
                                    <ul class="discussions-list">
                                        @foreach (var discussion in Model)
                                        {
                                            <li class="discussion-item @(discussion.IsUnread ? "unread" : "")">
                                                <div class="row">
                                                    <div class="col-sm-8">
                                                        <h4 class="discussion-subject">@discussion.Subject</h4>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="date">@discussion.FirstUnreadCreatedOn</div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-8 discussion-message">
                                                        <strong>@discussion.FirstUnreadUser</strong> says: @discussion.FirstUnreadMessage!
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <div id="messagesContainer" class="col-xs-12 messages-container" style="display: none;">
                                    <h3 id="discussionSubject"><i class="fa fa-caret-left margin-right-10"></i>New property to buy</h3>
                                    <div class="messages-list">
                                        <div class="row">
                                            <div class="col-sm-1 hidden-xs hidden">
                                                <div class="thumbnail">
                                                    <i class="fa fa-user fa-3x"></i>
                                                </div>
                                            </div>
                                            <div class="col-sm-11">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <strong>Edward Powell</strong> <span class="text-muted">wrote on 20/07/2015 10:20</span>
                                                    </div>
                                                    <div class="panel-body">
                                                        You should have done it before!
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-1 hidden-xs hidden">
                                                <div class=" thumbnail">
                                                    <i class="fa fa-user fa-3x"></i>
                                                </div>
                                            </div>
                                            <div class="col-sm-11">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <strong>Bob Smith</strong> <span class="text-muted">wrote on 20/07/2015 10:20</span>
                                                    </div>
                                                    <div class="panel-body">
                                                        You should have done it before!
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-1 hidden-xs hidden">
                                                <div class=" thumbnail">
                                                    <i class="fa fa-user fa-3x"></i>
                                                </div>
                                            </div>
                                            <div class="col-sm-11">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <strong>Bob Smith</strong> <span class="text-muted">wrote on 20/07/2015 10:20</span>
                                                    </div>
                                                    <div class="panel-body">
                                                        You should have done it before!
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="reply-panel panel panel-default margin-top-20">
                                        <div class="panel-heading">
                                            <strong>Reply to the discussion</strong>
                                        </div>
                                        <div class="panel-body">
                                            <form>
                                                <div class="form-group">
                                                    <label for="comment">Message:</label>
                                                    <textarea class="form-control" rows="5"></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary pull-right">Reply</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="well">
                        <h3>Primary Buyer</h3>
                        <h5>
                            Personal Details
                            <span class="pull-right">
                                <a id="editButton" class="btn btn-sm btn-primary" data-modallink="true" title="Edit Primary Buyer" data-url="@Url.Action("ViewEditSmsTransaction", "Transaction", new { area = "SmsTransaction" })"><i class="fa fa-pencil margin-right-5"></i>Edit</a>
                                <a id="pinButton" class="btn btn-sm btn-primary" data-modallink="true" title="Regenerate PIN" data-url="@Url.Action("ViewGeneratePIN", "Transaction", new { area = "SmsTransaction" })"><i class="fa fa-repeat margin-right-5"></i>Regenerate PIN</a>
                            </span>
                        </h5>
                        <div id="primaryBuyer"></div>
                    </div>
                    <div class="well">
                        <h3>
                            Additional Buyers
                            <i class="fa fa-spin fa-spinner margin-left-5" id="spinnerAdditionalBuyers" style="display:none;"></i>
                            <span class="pull-right">
                                <a id="addAdditionalBuyerButton" class="btn btn-sm btn-primary" data-modallink="true" title="Add Additional Buyer" data-url="@Url.Action("ViewAddAdditionalBuyer", "AdditionalBuyer", new {area = "SmsTransaction"})"><i class="fa fa-plus margin-right-5"></i>Add</a>
                            </span>
                        </h3>
                        <div id="additionalBuyers" data-url="@Url.Action("Get", "AdditionalBuyer", new {area = "SmsTransaction"})"></div>
                    </div>
                    <div class="well">
                        <h3>
                            Giftors
                            <i class="fa fa-spin fa-spinner margin-left-5" id="spinnerGiftors" style="display:none;"></i>
                            <span class="pull-right">
                                <a id="addGiftorButton" class="btn btn-sm btn-primary" data-modallink="true" title="Add Giftor" data-url="@Url.Action("ViewAddGiftor", "Giftor", new {area = "SmsTransaction"})"><i class="fa fa-plus margin-right-5"></i>Add</a>
                            </span>
                        </h3>
                        <div id="giftors" data-url="@Url.Action("Get", "Giftor", new {area = "SmsTransaction"})"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/SmsTransaction/Transaction/Index")"></script>
}
