@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@using Bec.TargetFramework.Infrastructure.Extensions
@model AddSmsClientDTO
<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="addGiftorLabel" aria-hidden="true">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addGiftorLabel">Add Giftor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <section class="col-12">
                        <form id="addGiftor-form" class="smart-form" data-url="@Url.Action("AddGiftor", "Giftor", new { area = "SmsTransaction" })" data-redirectto="@Url.Action("Selected", "Transaction", new { area = "SmsTransaction", selectedTransactionID = Model.TransactionID, pageNumber = ViewBag.pageNumber })" data-message="@Url.Action("ViewMessage", "Message", new { Area = "", })">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.TransactionID)
                            @Html.Hidden("pageNumber", (object)ViewBag.pageNumber)
                            <fieldset>
                                <legend>Giftor Details</legend>
                                <div class="row">
                                    <section class="col col-sm-4">
                                        <label class="label">Title</label>
                                        <label class="select">
                                            @Html.DropDownListFor(m => m.Salutation, Html.EnumListString<SalutationEnum>(), "Please Select", new { tabindex = "1" })
                                            <i></i>
                                        </label>
                                    </section>
                                    <section class="col col-sm-4">
                                        <label class="label">First Name</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            @Html.TextBoxFor(m => m.FirstName, new { tabindex = "2", maxlength = 50 })
                                        </label>
                                    </section>
                                    <section class="col col-sm-4">
                                        <label class="label">Last Name</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            @Html.TextBoxFor(m => m.LastName, new { tabindex = "3", maxlength = 50 })
                                        </label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-sm-8">
                                        <label class="label">Email</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size: 0.7em;"></i>
                                            @Html.TextBoxFor(m => m.Email, new { tabindex = "4", maxlength = 100, type = "email", data_url = Url.Action("CheckEmailPersonal", "App", new { Area = "", txId = Model.TransactionID }) })
                                        </label>
                                    </section>
                                    <section class="col col-sm-4">
                                        <label class="label">Date of Birth</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            @Html.TextBoxFor(m => m.BirthDate, "{0:O}", new { tabindex = "5", id = "birthDateInput", @readonly = true })
                                        </label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-sm-8">
                                        <label class="label">Personal Mobile Phone Number</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size: 0.7em;"></i>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { tabindex = "6", maxlength = 11, autocomplete = "off", @class = "form-control" })
                                        </label>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </section>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelAddGiftor" class="btn btn-default" data-dismiss="modal" tabindex="18">
                    Cancel
                </button>
                <button type="button" id="submitAddGiftor" class="btn btn-primary" tabindex="17">
                    Add
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/SmsTransaction/Giftor/_AddGiftor")"></script>