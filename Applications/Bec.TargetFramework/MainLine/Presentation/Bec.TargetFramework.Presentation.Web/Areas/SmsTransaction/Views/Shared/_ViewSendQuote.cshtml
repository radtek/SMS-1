@using Bec.TargetFramework.Entities

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="sendQuoteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="sendQuoteLabel">Send Quote</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("SendQuote", "Transaction", new { area = "SmsTransaction" })" method="POST" id="sendQuoteForm" class="smart-form" data-url="@Url.Action("UploadFile", "Messages", new { area = "Admin" })">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="txID" value="@ViewBag.txID" />
                            <input type="hidden" name="AttachmentsID" id="AttachmentsID" />
                            <fieldset>
                                <section>
                                    <label class="label">Message</label>
                                    <label class="textarea">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        <textarea id="newConversationMessage" name="Message" class="form-control" rows="3" tabindex="3"></textarea>
                                    </label>
                                </section>
                            </fieldset>
                        </form>

                        <div id="upload" class="smart-form new-conversation-form dropzone" style="margin-left:13px; margin-right:13px;">
                            <div class="fallback">
                                <form method="post" enctype="multipart/form-data" id="multiform">
                                    <input style="display:none;" type="file" name="file" id="file" title="Add File" />
                                    <button type="button" id="test">Upload file...</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" id="cancelSendQuote" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitSendQuote" class="btn btn-primary">
                    Send Quote
                </button>
            </div>
        </div>
    </div>
</div>
<script async src="@Scripts.Url("~/Scripts/SmsTransaction/Shared/_ViewSendQuote")"></script>