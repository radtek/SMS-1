<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <h2 class="row-seperator-header inline-heading"><i class="fa fa-lg fa-file-text-o margin-right-10"></i>Transaction Reports</h2>
        <div class="col-sm-12">

            <ul id="myTab1" class="nav nav-tabs bordered" role="tablist" data-selected="@TempData["tabIndex"]">
                <li><a href="#s1"> Summary </a></li>
                <li><a href="#s2"> By Firm </a></li>
                <li><a href="#s3"> All </a></li>
            </ul>
            <div id="myTabContent1" class="tab-content padding-10">

                <div class="tab-pane fade in active" id="s1" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="grid1" data-url="@Url.Action("GetData", "Reporting", new {area = "Admin", source = "SmsTransaction", group = "" })"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="s2" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="grid2" data-url="@Url.Action("GetData", "Reporting", new { area = "Admin", source = "SmsTransaction", group = "Firm" })"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="s3" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="grid3" data-url="@Url.Action("GetData", "Reporting", new { area = "Admin", source = "SmsTransaction", group = "[all]" })"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/Admin/Reporting/Transactions")"></script>
}
