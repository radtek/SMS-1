@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@using Bec.TargetFramework.Infrastructure.Extensions
@using Bec.TargetFramework.Presentation.Web.Helpers;
@model Edit<CalloutDTO>
<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="editCalloutLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editCalloutLabel">Edit Callout</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form id="editCallout-form" class="smart-form" data-url="@Url.Action("EditCallout", "Callout", new { area = "Admin" })" data-redirectto="@Url.Action("Index", "Callout", new { area = "Admin" })" data-message="@Url.Action("ViewMessage", "Message", new { Area = "", })">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            @Html.Hidden("CalloutId", (object)ViewBag.CalloutId)
                            @Html.Hidden("pageNumber", (object)ViewBag.pageNumber)
                            @Html.Hidden("calloutRoleId", (object)ViewBag.calloutRoleId)
                            <fieldset>
                                <section>
                                    <label class="label">User Role</label>
                                    <label class="select">
                                        @Html.DropDownListFor(m => m.Model.RoleID, (IList<SelectListItem>)ViewBag.roles, "Please Select", new { tabindex = "1", disabled = "disabled", style = "background-color: rgba(218, 218, 218, 1);" })
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        <i></i>
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Title</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Model.Title, new { tabindex = "2", maxlength = 150 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Selector</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Model.Selector, new { tabindex = "3", maxlength = 150 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Effective On</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Model.EffectiveOn, "{0:O}", new { tabindex = "5", id = "effectiveDateInput", @readonly = true })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Content</label>
                                    <label class="textarea">
                                        <i class=" icon-append fa fa-asterisk " style="font-size:0.7em;"></i>
                                        @Html.TextAreaFor(m => m.Model.Description, new { tabindex = "4", maxlength = "500", rows = 5, id = "description" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Position</label>
                                    <label class="select">
                                        @Html.DropDownListFor(m => m.Model.Position, EnumHelper.GetSelectList(typeof(HtmlPositionEnum)), "Please Select", new { tabindex = "6" })
                                        <i></i>
                                    </label>
                                </section>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelEditCallout" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitEditCallout" class="btn btn-primary" tabindex="5">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/Admin/Shared/_EditCallout")"></script>
