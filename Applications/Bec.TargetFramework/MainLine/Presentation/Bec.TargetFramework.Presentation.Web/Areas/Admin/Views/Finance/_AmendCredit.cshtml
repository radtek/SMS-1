
<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="addUserLabel" aria-hidden="true">
    <div class="modal-dialog">

        <div class="help help-container help-sm">
            <div class="help-vert">HELP</div>
            <div class="help help-inner">
                <div>Help goes here</div>
            </div>
        </div>

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addUserLabel">Amend Credit</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form id="amend-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orgID" value="@ViewBag.orgID" />
                            <fieldset>

                                <div class="row">
                                    <div class="col col-8">
                                        <section>
                                            <label class="label">Adjustment Amount</label>
                                            <label class="input ">
                                                <i class="icon-append fa fa-asterisk" style="font-size: 0.7em;"></i>
                                                <input name="amount" id="amount"/>
                                            </label>
                                        </section>
                                    </div>
                                </div>
                                <div class="row">
                                    <section class="col col-8">
                                        <label class="label">Reason</label>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            <textarea name="reason" rows="5"></textarea>
                                        </label>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelAmend" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitAmend" class="btn btn-primary" tabindex="5">
                    Amend
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // submit from when Save button clicked
    $("#submitAmend").click(function () {
        $("#amend-form").submit();
    });

    $("#amend-form").validate({
        ignore: '.skip',
        // Rules for form validation
        rules: {
            amount: {
                required: true,
                number: true,
                min: -10000,
                max: 10000
            },
            reason: {
                required: true
            }
        },

        // Do not change code below
        errorPlacement: function (error, element) {
            error.insertAfter(element.parent());
        },

        submitHandler: validateSubmit
    });

    function validateSubmit(form) {
        $("#submitAmend").prop('disabled', true);
        var formData = $("#amend-form").serializeArray();
        ajaxWrapper({
            url: '@Url.Action("AmendCredit", "Finance", new { area = "Admin" })',
            type: "POST",
            data: formData
        }).done(function (res) {
            hideCurrentModal();
            applyFilter();
        }).fail(function (e) {
            handleModal({ url: '@Url.Action("ViewMessage", "Home", new { Area = "" })' + "?title=Error&message=" + e + "&button=Back" }, {
                messageButton: function () {
                    $("#submitAmend").prop('disabled', false);
                }
            }, true);
        });
    }
</script>
