<!-- MAIN CONTENT -->
@model Bec.TargetFramework.Presentation.Web.Areas.Admin.Models.CalloutModel
<div id="content">
    <div class="row">
        <div class="col-sm-7 col-lg-8">
            <h2 class="row-seperator-header inline-heading"><i class="fa fa-lg fa-user margin-right-10"></i>View Callouts</h2>
            <a data-href="@Url.Action("ViewAddCallout", "Callout", new { area  = "Admin" })" class="btn btn-primary btn-sm inline-heading" data-modallink="true"><i class="fa fa-plus margin-right-5"></i>Add Callout</a>
        </div>
        <div class="col-sm-5 col-lg-4">
            <div class="input-group margin-top-15 margin-bottom-5 ">
                @Html.DropDownListFor(m => m.CalloutRoleId, (IList<SelectListItem>)ViewBag.roles, "Select role", new { tabindex = "1", @class = "form-control", id = "roleDropdown", style = "width:200px; margin-top:-3px; margin-right:5px" })
                <a id="viewCalloutOrder" data-href="@(Model.CalloutRoleId != null && Model.CalloutRoleId != default(Guid) ? Url.Action("ViewCalloutOrder", "Callout", new { area = "Admin", RoleId = Model.CalloutRoleId }) : "")" @(Model.CalloutRoleId != null && Model.CalloutRoleId != default(Guid) ? "" : "disabled")  data-url="@Url.Action("ViewCalloutOrder", "Callout", new { area = "Admin" })" class="btn btn-primary btn-sm inline-heading" data-modallink="true"><i class="fa fa-plus margin-right-5"></i>View Callout Order</a>
                @*<input type="text" class="form-control" id="gridSearchInput">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" id="gridSearchButton"><i class="fa fa-search margin-right-5"></i>Search</button>
                    </span>*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <ul id="myTab1" class="nav nav-tabs bordered" role="tablist" data-selected="@TempData["tabIndex"]">
                <li><a href="#s1">Callouts </a></li>
                <li><a href="#s2"> History </a></li>
            </ul>
            <div id="myTabContent1" class="tab-content padding-10">

                <div class="tab-pane fade in active" id="s1" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="cGrid" data-url="@Url.Action("GetCallouts", "Callout", new { area = "Admin"})" data-jumpto="@TempData["CalloutId"]" data-jumptopage="@TempData["pageNumber"]"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="nPanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <a id="editButtonCallout" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewEditCallout", "Callout", new { area = "Admin" })"><i class="fa fa-pencil margin-right-5"></i>Edit Callout</a>
                                <a id="deleteButtonCallout" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewDeleteCallout", "Callout", new { area = "Admin" })"><i class="fa fa-times margin-right-5"></i>Delete Callout</a>
                                <h5>Selected Callout</h5>
                                <dl class="dl-horizontal">
                                    <dt>Title:</dt>
                                    <dd><p id="ddnTitle"></p></dd>
                                    <dt>Role:</dt>
                                    <dd><p id="ddnRole"></p></dd>
                                    <dt>Position:</dt>
                                    <dd><p id="ddnPosition"></p></dd>
                                    <dt>Effective On:</dt>
                                    <dd><p id="ddnEffectiveOn"></p></dd>
                                    <dt>Created On:</dt>
                                    <dd><p id="ddnCreatedOn"></p></dd>
                                    <dt>Created By:</dt>
                                    <dd><p id="ddnCreatedBy"></p></dd>
                                    <dt>Modified On:</dt>
                                    <dd><p id="ddnModifiedOn"></p></dd>
                                    <dt>Modified By:</dt>
                                    <dd><p id="ddnModifiedBy"></p></dd>

                                </dl>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <h5>Content:</h5>
                                <div id="ddnDescription" style="margin-left:16px;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="s2" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="uGrid" data-url="@Url.Action("GetViewedCallouts", "Callout", new { area = "Admin" })"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="ePanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <a id="editButtonViewedCallout" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewEditViewedCallout", "Callout", new { area = "Admin" })"><i class="fa fa-pencil margin-right-5"></i>Edit ViewedCallout</a>
                                <h5>Selected ViewedCallout</h5>
                                <dl class="dl-horizontal">
                                    <dt>Callout:</dt>
                                    <dd><p id="ddeName"></p></dd>
                                    <dt>Role:</dt>
                                    <dd><p id="ddeRole"></p></dd>
                                    <dt>ViewedCallout:</dt>
                                    <dd><p id="ddeViewedCallout"></p></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/Admin/Callout/Index")"></script>
}