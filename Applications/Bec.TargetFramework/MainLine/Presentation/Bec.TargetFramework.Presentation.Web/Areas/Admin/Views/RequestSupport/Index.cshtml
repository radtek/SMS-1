<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-sm-5 col-lg-6">
            <h2 class="row-seperator-header inline-heading"><i class="fa fa-lg fa-support margin-right-10"></i>View Support Messages</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <ul id="tabList" class="nav nav-tabs bordered" role="tablist" data-selected="@TempData["tabIndex"]">
                <li><a href="#s1">New </a></li>
                <li><a href="#s2">Closed </a></li>
            </ul>
            <div id="tabContent" class="tab-content padding-10">

                <div class="tab-pane fade in active" id="s1" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="requestGrid" data-url="@Url.Action("GetRequestSupports", "RequestSupport", new { area = "Admin" })" data-jumpto="@TempData["RequestSupportId"]" data-jumptopage="@TempData["pageNumber"]"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="nPanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <a id="closeButtonRequestSupport" class="btn btn-primary btn-sm" data-modallink="true" data-url="@Url.Action("ViewCloseRequestSupport", "RequestSupport", new { area = "Admin" })"><i class="fa  margin-right-5"></i>Close</a>
                                <h5>Selected Support Message</h5>
                                <dl class="dl-horizontal">
                                    <dt>Ticket Number:</dt>
                                    <dd><p id="ddnTicketNumber"></p></dd>
                                    <dt>User Name:</dt>
                                    <dd><p id="ddnUserName"></p></dd>
                                    <dt>Email:</dt>
                                    <dd><p id="ddnEmail"></p></dd>
                                    <dt>Telephone:</dt>
                                    <dd><p id="ddnTelephone"></p></dd>
                                    <dt>Title:</dt>
                                    <dd><p id="ddnTitle"></p></dd>
                                    <dt>Created On:</dt>
                                    <dd><p id="ddnCreatedOn"></p></dd>
                                    <dt>Type:</dt>
                                    <dd><p id="ddnType"></p></dd>
                                </dl>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <h5>Content:</h5>
                                <div id="ddnDescription" style="margin-left:16px;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="s2" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <div id="closedGrid" data-url="@Url.Action("GetClosedRequestSupports", "RequestSupport", new { area = "Admin" })"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row hidden" id="ePanel">
                        <div class="col-sm-6">
                            <!-- well -->
                            <div class="well">
                                <h5>Selected Support Message</h5>
                                <dl class="dl-horizontal">
                                    <dt>Ticket Number:</dt>
                                    <dd><p id="ddeTicketNumber"></p></dd>
                                    <dt>User Name:</dt>
                                    <dd><p id="ddeUserName"></p></dd>
                                    <dt>Email:</dt>
                                    <dd><p id="ddeEmail"></p></dd>
                                    <dt>Telephone:</dt>
                                    <dd><p id="ddeTelephone"></p></dd>
                                    <dt>Title:</dt>
                                    <dd><p id="ddeTitle"></p></dd>
                                    <dt>Closed On:</dt>
                                    <dd><p id="ddeClosedOn"></p></dd>
                                    <dt>Type:</dt>
                                    <dd><p id="ddeType"></p></dd>
                                </dl>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="well">
                                <h5>Reason:</h5>
                                <div id="ddeReason" style="margin-left:16px;"></div>
                            </div>
                            <!-- well -->
                            <div class="well">
                                <h5>Content:</h5>
                                <div id="ddeDescription" style="margin-left:16px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script async src="@Scripts.Url("~/Scripts/Admin/RequestSupport/Index")"></script>
}