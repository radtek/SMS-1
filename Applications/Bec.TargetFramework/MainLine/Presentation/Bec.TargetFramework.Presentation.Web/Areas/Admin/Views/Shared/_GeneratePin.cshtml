@using Bec.TargetFramework.Entities

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="generatePinLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="generatePinLabel">Generate PIN</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("GeneratePin", "Company", new { area = "Admin" })" method="POST" id="generatePin-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <input type="hidden" name="orgId" value="@ViewBag.orgId" />
                                <input type="hidden" name="uaoId" value="@ViewBag.uaoId" />

                                <div class="row">
                                    <section class="col col-7">
                                        <label class="label">Please enter the number you contacted this company on</label>
                                    </section>

                                    <section class="col col-5">
                                        <label class="input">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            <input type="text" name="notes" maxlength="20" />
                                        </label>
                                    </section>
                                </div>

                                <div class="row">
                                    <section class="col">
                                        <label class="label">Are you sure you wish to generate a PIN number for @ViewBag.companyName?</label>
                                    </section>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" id="cancelGeneratePin" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitGeneratePin" class="btn btn-primary">
                    Generate PIN
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/GeneratePin.js"></script>
