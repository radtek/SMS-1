@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@using Bec.TargetFramework.Infrastructure.Extensions
@model RejectCompanyDTO

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="rejectCompanyLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="rejectCompanyLabel">Reject Company</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action("RejectTempCompany", "Company", new { area = "Admin" })" method="POST" id="rejectTempCompany-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                @Html.HiddenFor(model => model.OrganisationId)
                                @Html.HiddenFor(model => model.ReturnTab)
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Are you sure you want to reject @Model.CompanyName?</label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Reason for rejection</label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-xs-12">
                                        <label class="select">
                                            @Html.DropDownListFor(model => model.Reason, Html.EnumList<RejectionTypeIDEnum>(), "Please Select")
                                            <i></i>
                                        </label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Notes</label>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-xs-12">
                                        <label class="textarea">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            @Html.TextAreaFor(model => model.Notes, new { rows = "5" })
                                        </label>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" id="cancelReject" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitReject" class="btn btn-primary">
                    Reject
                </button>
            </div>
        </div>
    </div>
</div>
<script async src="@Scripts.Url("~/Scripts/Admin/Shared/_RejectTempCompany")"></script>