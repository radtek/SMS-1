@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@using Bec.TargetFramework.Infrastructure.Extensions
@model RequestSupportDTO

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="addRequestSupportLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-md-12"><h4 class="modal-title" id="addRequestSupportLabel">Request Support</h4></div>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form action="@Url.Action("AddRequestSupport", "RequestSupport", new { area = "Admin" })" method="POST" id="addRequestSupport-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <section>
                                    <label class="label">User Name</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBox("UserName", (string)ViewBag.UserName, new { @class = "form-control", disabled = "disabled", style = "background-color: rgba(218, 218, 218, 1);" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Email</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBox("Email", (string)ViewBag.Email, new { @class = "form-control", disabled = "disabled", style = "background-color: rgba(218, 218, 218, 1);" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Request Type</label>
                                    <label class="select">
                                        @Html.DropDownListFor(m => m.RequestType, EnumHelper.GetSelectList(typeof(RequestType)), "Please Select", new { tabindex = "1" })
                                        <i></i>
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Telephone</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Telephone, new { tabindex = "2", maxlength = 11 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Title</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Title, new { tabindex = "3", maxlength = 150 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Content</label>
                                    <label class="textarea">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextAreaFor(m => m.Description, new { tabindex = "4", maxlength = "500", rows = 5, id = "description" })
                                    </label>
                                </section>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelAddRequestSupport" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitAddRequestSupport" class="btn btn-primary" tabindex="5">
                    Add
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/Admin/RequestSupport/_AddRequestSupport")"></script>
