@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@model AddHelpDTO

<style>
    .k-grid tbody .k-button {
    min-width: 20px;
    width: 24px;
}
</style>
<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="editHelpLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editHelpLabel">Edit Help</h4>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("EditHelp", "Help", new { area = "Admin" })" method="POST" id="editHelp-form" class="smart-form">
                    @Html.ValidationBootstrap()
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.HelpID)

                    <fieldset>
                        <div class="row">
                            <div class="col col-6">
                                <section>
                                    <label class="label">Type</label>
                                    <label class="select">
                                        @Html.DropDownListFor(m => m.HelpTypeID, Html.EnumListWithIntValue<HelpTypeEnum>().Where(s => !s.Text.Equals("All")), "Please Select", new { tabindex = "1", @readonly = "readonly" })
                                        <i></i>
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Name</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Name, new { tabindex = "2", maxlength = 200 })
                                    </label>
                                </section>
                            </div>
                            <div class="col col-6">
                                <section>
                                    <label class="label">Description</label>
                                    <label class="input ">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", tabindex = "3", rows = 3, style = "width:100%; resize:none;" })
                                    </label>
                                </section>
                                <section id="uiPageUrlSection">
                                    <label class="label">Page Url</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.UiPageUrl, new { tabindex = "4", maxlength = 200, data_url = Url.Action("DoesShowMeHowUiPageUrlExist", "Help", new { Area = "Admin" }) })
                                    </label>
                                </section>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col col-12">
                                <div class="row">
                                    <a id="addEditHelpItemButton" data-href="@Url.Action("AddEditHelpItem", "Help", new { area = "Admin", hID = Model.HelpID })" data-modallink="true" data-toggle="modal" class="btn btn-primary btn-sm inline-heading">
                                        <i class="fa fa-plus margin-right-5"></i>Add Item
                                    </a>
                                    <a id="editHelpItemButton" data-href="@Url.Action("EditHelpItem", "Help", new { area = "Admin", hID = Model.HelpID })" data-modallink="true" data-toggle="modal" class="btn btn-primary btn-sm inline-heading"></a>
                                    <a id="upItemButton" data-href="@Url.Action("MoveUpEdit", "Help", new { area = "Admin", hID = Model.HelpID })" class="display: none"></a>
                                    <a id="downItemButton" data-href="@Url.Action("MoveDownEdit", "Help", new { area = "Admin", hID = Model.HelpID })" class="display: none"></a>
                                    <a id="deleteItemButton" data-href="@Url.Action("DeleteHelpItem", "Help", new {area = "Admin"})" data-modallink="true" data-toggle="modal" class="display:none"></a>
                                </div>
                                <div class="row">
                                    <div id="ehGrid" data-url="@Url.Action("GetHelpItems", "Help", new { area = "Admin", hID = Model.HelpID })"></div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer" id="editHelpControls">
                <button type="button" id="cancelEditHelp" class="btn btn-default" data-dismiss="modal" tabindex="30">
                    Cancel
                </button>
                <button type="button" id="submitEditHelp" class="btn btn-primary" tabindex="5">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/Admin/Help/_EditHelp")"></script>
