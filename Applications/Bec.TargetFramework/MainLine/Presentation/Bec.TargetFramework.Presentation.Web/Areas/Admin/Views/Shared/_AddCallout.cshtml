@using Bec.TargetFramework.Entities
@using Bec.TargetFramework.Entities.Enums
@using Bec.TargetFramework.Infrastructure.Extensions
@model CalloutDTO

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="addCalloutLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-md-12"><h4 class="modal-title" id="addCalloutLabel">Add Callout</h4></div>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form action="@Url.Action("AddCallout", "Callout", new { area = "Admin" })" method="POST" id="addCallout-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            @Html.Hidden("calloutRoleId", (Model.RoleID != null && Model.RoleID != default(Guid) ? Model.RoleID.ToString() : ""))
                            <fieldset>
                                <section>
                                    <label class="label">Role</label>
                                    <label class="select">
                                        @if (Model.RoleID != null && Model.RoleID != default(Guid))
                                        {
                                            @Html.DropDownListFor(model => model.RoleID, (IList<SelectListItem>)ViewBag.roles, "Please Select", new { tabindex = "1", disabled = "disabled", style = "background-color: rgba(218, 218, 218, 1);"})
                                            @Html.Hidden("RoleId", Model.RoleID)
                                        }
                                        else
                                        {
                                            @Html.DropDownListFor(model => model.RoleID, (IList<SelectListItem>)ViewBag.roles, "Please Select", new { tabindex = "1" })
                                        }
                                        <i></i>
                                    </label>
                                </section>
                               
                                <section>
                                    <label class="label">Title</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Title, new { tabindex = "2", maxlength = 150 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Selector</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextBoxFor(m => m.Selector, new { tabindex = "3", maxlength = 150 })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Content</label>
                                    <label class="textarea">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        @Html.TextAreaFor(m => m.Description, new { tabindex = "4", maxlength = "500", rows = 5, id = "description" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Effective On</label>
                                    <label class="input ">
                                        <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                        <input type="text" id="effectiveDateInput" tabindex="5" readonly="readonly" />
                                        @Html.HiddenFor(m => m.EffectiveOn)
                                    </label>
                                </section>
                                <section >
                                    <label class="label">Position</label>
                                    <label class="select">
                                        @Html.DropDownListFor(m => m.Position, EnumHelper.GetSelectList(typeof(HtmlPositionEnum)), "Please Select", new { tabindex = "6" })
                                        <i></i>
                                    </label>
                                </section>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelAddCallout" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitAddCallout" class="btn btn-primary" tabindex="5">
                    Add Callout
                </button>
            </div>
        </div>
    </div>
</div>

<script async src="@Scripts.Url("~/Scripts/Admin/Shared/_AddCallout")"></script>
