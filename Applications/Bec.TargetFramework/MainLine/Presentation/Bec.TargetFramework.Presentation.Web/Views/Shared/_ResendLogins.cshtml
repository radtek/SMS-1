@using Bec.TargetFramework.Entities

<div class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="resendLoginsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="resendLoginsLabel">Resend Login Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action(ViewBag.RedirectAction, ViewBag.RedirectController, new { area = ViewBag.RedirectArea, uaoID = ViewBag.uaoID, txID = ViewBag.txID })" method="POST" id="resendLogins-form" class="smart-form">
                            @Html.ValidationBootstrap()
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Are you sure you wish to resend the temporary login details to @ViewBag.label?</label>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button typw="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="submitResendLogins" class="btn btn-primary">
                    <i class="fa fa-envelope margin-right-5"></i>Resend Login Details
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // submit from when Save button clicked
    $("#submitResendLogins").click(function () {
        $("#submitResendLogins").prop('disabled', true);
        $("#resendLogins-form").submit();
    });
</script>
