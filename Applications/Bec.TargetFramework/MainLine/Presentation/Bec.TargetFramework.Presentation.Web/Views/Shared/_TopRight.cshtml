@using Bec.TargetFramework.Entities
@if (Request.IsAuthenticated)
{
    if (!Html.RouteMatches("AcceptTCs", "Index"))
    {
        <span class="menu-toggle margin-left-15 margin-right-10 margin-top-15 pull-right">
            <a href="javascript:void(0);" data-action="toggleMenu" title="Collapse Menu"><i class="fa fa-bars"></i></a>
        </span>
    }

    <div id="logout" class="margin-top-10 margin-left-10 pull-right">
        <a href="@Url.Action("Index", "Logout", new {area = "Account"})" class="btn btn-default" title="Logout">Log out<i class="fa fa-sign-out margin-left-10"></i></a>
    </div>
    
    <div class="dropdown pull-right margin-top-10">
        <button class="btn btn-default dropdown-toggle" type="button" id="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" title="User Functions">
            <i class="fa fa-user"></i>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="userMenu">
            <li class="dropdown-header visible-xs">
                <span>@Context.GetUserName()</span>
            </li>
            <li>
                <a href="@Url.Action("ChangePassword", "MyAccount", new {area = "Account", ReturnUrl = Request.Url.PathAndQuery })" title="Change Password"><i class="fa fa-key"></i><span class="header-btn-text">Change Password</span></a>
            </li>
        </ul>
    </div>

    <div id="welcome-message" class="pull-right margin-top-15 margin-right-15 hidden-xs">
        <span>Welcome @Context.GetUserName()</span>
    </div>
}