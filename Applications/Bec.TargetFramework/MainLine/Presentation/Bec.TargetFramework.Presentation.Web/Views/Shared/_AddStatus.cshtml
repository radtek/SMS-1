<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addModalLabel">@ViewBag.title</h4>
            </div>
            <div class="modal-body">
                <br />
                <div class="row">
                    <div class="col-12">
                        <form action="@Url.Action(ViewBag.action, ViewBag.controller, new { area = ViewBag.area, baID = ViewBag.OrganisationBankAccountID, status = ViewBag.status, isactive = ViewBag.isactive })" method="POST" id="confirmStatus-form" class="smart-form">
                            <label class="label">@ViewBag.message</label>
                            @if (ViewBag.includeNotes != null && ViewBag.includeNotes)
                            {
                                <div class="row">
                                    <section class="col">
                                        <label class="label">Notes</label>
                                    </section>
                                </div>

                                <div class="row">
                                    <section class="col col-8">
                                        <label class="textarea">
                                            <i class="icon-append fa fa-asterisk" style="font-size:0.7em;"></i>
                                            <textarea id="notes" rows="5"></textarea>
                                        </label>
                                    </section>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelButton" class="btn btn-primary" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="okButton" class="btn btn-primary">
                    OK
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // submit from when Save button clicked
    $("#okButton").click(function () {
        $("#okButton").prop('disabled', true);
        $("#confirmStatus-form").submit();
    });
</script>