@model Bec.TargetFramework.Entities.NewsArticleDTO
@{
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "News";
    ViewBag.Meta = "Since 2006 BE Consultancy has been working with conveyancers and lenders providing bespoke risk solutions to help make conveyancing better for them and their customers.";
}
<h2><a href="@Url.Action("News")">@ViewBag.Title.</a></h2>
<div class="row">
    <div class="col-md-8">
        <h3>@Model.Title</h3>
        <p><em>Published on @Model.DateTime.ToShortDateString()</em></p>
        @foreach (var p in @Model.Content.Split(new string[] { System.Environment.NewLine }, StringSplitOptions.RemoveEmptyEntries))
        {
            <p>@p</p>
        }
    </div>
</div>