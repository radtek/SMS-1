@model Bec.DynamicForm.Entities.DTO.FormSectionDTO

@using Ext.Net
@using Ext.Net.MVC

@{
    ViewBag.Title = "Dynamic Form Questions";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
    var X = Html.X();
}

@section headtag
{
    <style>
        .tree {
            float: left;
            margin: 20px;
            border: 1px solid #c3daf9;
        }
    </style>




}
@section body
{
 @(X.Window()
            .Title("Add Sub Section")
            .Width(250)
            .Height(220)
            .Layout(LayoutType.Fit)
            .Closable(false)
            .Border(false)
            .Items(
                Html.X().FormPanel()
                    .ID("FormPanel1")
                    .Frame(true)
                    .DefaultAnchor("100%")
                    .BodyPadding(6)
                    .FieldDefaults(def =>
                    {
                        def.MsgTarget = MessageTarget.Side;
                    })
                    .Items(
                        Html.X().HiddenFor(m => m.FormSectionParentId),
                        Html.X().TextFieldFor(m => m.SectionName),
                        Html.X().TextFieldFor(m => m.SectionDescription)

                    )
            )
            .Buttons(
                Html.X().Button()
                    .Text("Save")
                    .DirectEvents(de =>
                            {
                                de.Click.Url = Url.Action("DirectEventSubmit");
                                de.Click.EventMask.ShowMask = true;
                                de.Click.FormID = "FormPanel1";
                            })

            )
)

}          
