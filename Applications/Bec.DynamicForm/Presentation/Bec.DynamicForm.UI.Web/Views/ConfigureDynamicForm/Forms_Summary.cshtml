@model IEnumerable<Bec.DynamicForm.Entities.DTO.FormDTO>

@{
    ViewBag.Title = "Forms_Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts {
    
}

<div id="fullcol">
    <div class="portlet rnd">
        <div class="portlet-header"><h2>Form Summary</h2></div>
        <div class="portlet-content">

            <div class="row">                
             
                <a href="@Url.Action("Form_Create", "ConfigureDynamicForm")" class="btn">Create New Form</a>              
                </div>
                <table class="table" style="width:100%">
                    <tr>

                        <th>
                           Name
                        </th>
                        <th>
                           Description
                        </th>
                        
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.FormName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormDescription)
                            </td>
                           
                            <td>
                                <a href="@Url.Action("Section_Summary", "ConfigureDynamicForm", new { FormId = item.FormId, FormName = item.FormName })" class="btn">Sections</a> |
                                @Html.ActionLink("Edit", "Form_Edit", new { id = item.FormId }, new { @class="btn" })</td>
                        </tr>
                    }

                </table>
            </div></div></div>
